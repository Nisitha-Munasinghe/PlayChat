<AnchorPane fx:id="pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/background.png" />
         </image>
      </ImageView>
      <TextField fx:id="tf_message" layoutX="111.0" layoutY="337.0" onAction="#txtMesssageFieldOnAction" prefHeight="30.0" prefWidth="321.0" promptText="Type a message..." style="-fx-background-radius: 8;" />
      <ScrollPane fx:id="sp_main" fitToWidth="true" layoutX="56.0" layoutY="91.0" prefHeight="231.0" prefWidth="489.0">
         <content>
            <VBox fx:id="vBox_message" prefHeight="229.0" prefWidth="487.0" />
         </content>
      </ScrollPane>
      <Label fx:id="lblUserName" layoutX="108.0" layoutY="26.0" text="Damon Mccarty" textFill="#334642">
         <font>
            <Font name="Corbel Bold" size="18.0" />
         </font>
      </Label>
      <ImageView fitHeight="45.0" fitWidth="43.0" layoutX="56.0" layoutY="16.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/girl.png" />
         </image>
      </ImageView>
      <JFXButton fx:id="button_send" layoutX="502.0" layoutY="335.0" onAction="#btnSendOnAction" text="Button">
         <graphic>
            <ImageView fitHeight="34.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/send%20(2).png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font size="1.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="emoji_button" layoutX="449.0" layoutY="335.0" text="Button">
         <graphic>
            <ImageView fitHeight="34.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/winking.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font size="1.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="file_button" layoutX="60.0" layoutY="335.0" onAction="#btnFileButtonOnAction" text="Button">
         <graphic>
            <ImageView fitHeight="34.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/folder%20(2).png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font size="1.0" />
         </font>
      </JFXButton>
   </children>
   
</AnchorPane>
